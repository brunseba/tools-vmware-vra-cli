# VMware vRA Configuration
VRA_API_URL=https://vra.example.com
VRA_API_TOKEN=your_vra_api_token_here
VRA_TENANT=your_tenant
VRA_DOMAIN=your_domain
VRA_VERIFY_SSL=true

# Backend API Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_at_least_32_characters
SESSION_SECRET=your_session_secret_here

# OIDC Configuration (Optional)
OIDC_ISSUER_URL=https://your-oidc-provider.com
OIDC_CLIENT_ID=your_oidc_client_id
OIDC_CLIENT_SECRET=your_oidc_client_secret
OIDC_REDIRECT_URI=http://localhost:3000/auth/callback

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Frontend Configuration
VITE_API_BASE_URL=http://localhost:3000
VITE_OIDC_AUTHORITY=https://your-oidc-provider.com
VITE_OIDC_CLIENT_ID=your_oidc_client_id
VITE_OIDC_REDIRECT_URI=http://localhost:5173/auth/callback
VITE_OIDC_POST_LOGOUT_REDIRECT_URI=http://localhost:5173

# Development Configuration
HOT_RELOAD=true
TYPESCRIPT_CHECK=true

# Production Configuration
SSL_CERT_PATH=/etc/ssl/certs/app.crt
SSL_KEY_PATH=/etc/ssl/private/app.key

# Monitoring and Logging
ENABLE_METRICS=true
METRICS_PORT=9090
LOG_FORMAT=json
LOG_MAX_SIZE=10M
LOG_MAX_FILES=5

# Database Configuration (if needed for advanced features)
DATABASE_URL=postgresql://user:password@localhost:5432/vra_db
DATABASE_POOL_SIZE=10
DATABASE_SSL_MODE=require
